
import java.lang.*;
import java.util.*;
class Main {
    public static void main(String[] args) {
        String str = "Hello my name is Deepak";
        int count = 0;
        for(int i = 0; i < str.length()-1; i++){
            if(str.charAt(i) == ' ' && str.charAt(i+1) != ' '){
                count++;
            }
        }
        System.out.println(str);
        System.out.println("No of word present in the above string is " + count);
    }
    
}
